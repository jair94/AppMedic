<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consult">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/consultafondo"
        tools:layout_editor_absoluteX="-89dp"
        tools:layout_editor_absoluteY="157dp" />

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <View
        android:id="@+id/botton_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/botton_view"
        android:layout_below="@+id/top_view"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="1dp"
        app:columnCount="1"
        app:rowCount="2">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="12dp"
            app:cardBackgroundColor="@color/transparente"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            app:cardMaxElevation="12dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgRegistrarCita"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_registarcita" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Solicitar Citas"
                    android:textColor="#03989E"
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="12dp"
            app:cardBackgroundColor="@color/transparente"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            app:cardMaxElevation="12dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgEspecializaciones"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_especialistas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Especialistas"
                    android:textColor="#03989E"
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botton_view"
        android:layout_below="@+id/top_view"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="1dp"
        app:columnCount="1"
        app:rowCount="2">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="12dp"
            app:cardBackgroundColor="@color/transparente"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            app:cardMaxElevation="12dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgConsultarCita"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_consultarcita" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Consultar Citas"
                    android:textColor="#03989E"
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="12dp"
            app:cardBackgroundColor="@color/transparente"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            app:cardMaxElevation="12dp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgCancelarCita"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_cancel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Cancelar Citas"
                    android:textColor="#03989E"
                    android:textSize="16dp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.gridlayout.widget.GridLayout>

</RelativeLayout>